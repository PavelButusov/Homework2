def select_sort_stable(arr):
    if (len(arr) == 0): return

    for j in range(len(arr)):
        min = j

        for i in range(j + 1, len(arr)):
            if (arr[i] < arr[min]): min = i

        if (min != j):
            value = arr[min]

            for l in range(min, j - 1, -1):
                arr[l] = arr[l - 1]

            arr[j] = value

    return arr

if __name__ == '__main__':
    my_arr1 = [3, 2, 1, 4, 0, 5]
    result = select_sort_stable(my_arr1)
    print(result)
