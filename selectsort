def selectsort(n):
    if (len(n) == 0): return

    for j in range(len(n)):
        min = j

        for i in range(j + 1, len(n)):
            if (n[i] < n[min]): min = i

        if (min != j):
            value = n[min]

            for l in range(min, j - 1, -1):
                n[l] = n[l - 1]

            n[j] = value

    return n

if __name__ == '__main__':
    lst = [5,21,45,13,4,1,3,6]
    res= selectsort(lst)
    print(res)

# Здесь перебираются элементы с конца, каждый раз производится поиск наименьшего и они вставляются на место числа,
# над которым проводится операция. И так, с хвоста, сортируются остальные элементы до наибольшего.
# Эта сортировка несколько сложнее пузырьковой, 
# поскольку делать одновременно больше операций программе-искать минимальное и менять его с тем, что задано в данный момент
